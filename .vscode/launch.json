        },

        {
            "name": "Launch Chrome against localhost",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5501/src/",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "trace": true // 可选：用于生成更详细的调试日志
